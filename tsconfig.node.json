{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    // "nodenext" seems to force "type": "module" on all .d.ts of dependences,
    // so we need to use "node"
    "moduleResolution": "node",
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  }
}
